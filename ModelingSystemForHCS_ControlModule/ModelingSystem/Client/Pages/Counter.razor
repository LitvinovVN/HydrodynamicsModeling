@page "/counter"

@using static ModelingSystem.Client.Shared.MainLayout

<PageTitle>Counter</PageTitle>

<h1 style="color: @AppState.Color; font-size: @AppState.Size">Counter</h1>

<div style="display:flex">
    <div style="width: 150px">
        <select @bind="AppState.Color" class="form-control" style="margin-top: 15px;">
            <option value="green">Green</option>
            <option value="red">Red</option>
            <option value="blue">Blue</option>
        </select>
    </div>
    <div style="width: 150px">
        <select @bind="AppState.Size" class="form-control" style="margin-top: 15px;">
            <option value="12px">12px</option>
            <option value="26px">26px</option>
            <option value="36px">36px</option>
        </select>
    </div>
</div>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    [CascadingParameter] public AppState AppState{ get; set; }

    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
